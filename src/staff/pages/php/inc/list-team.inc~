<?php
dbAndPrint();

function dbAndPrint() {
    $db = new BDD();
    $reponse1 = $db->query('SELECT Team.ID, FirstName as F, LastName as L FROM Team, Personne WHERE Personne.ID = Team.ID_Player1 ');
    $reponse2 = $db->query('SELECT Team.ID, FirstName as F, LastName as L FROM Team, Personne WHERE Personne.ID = Team.ID_Player2 ');
    while ($donnes1 = mysql_fetch_array($reponse1))
    {
	$donnes2 = mysql_fetch_array($reponse2);
        printListTeam($donnes1, $donnes2);
    }
}

function printListTeam($donnes1,$donnes2) {
    echo "<tr class=\"odd gradeX\">";
    echo "<td>".$donnes1['ID']."</td>";
    echo "<td>".$donnes1['F'] . " " . $donnes1['L']."</td>";
    echo "<td>".$donnes2['F'] . " " . $donnes2['L']."</td>";
    echo "<td></td>";
    echo "<td></td>";
    echo "<td><a href=\"./edit-player.php\" ><i class=\"fa fa-edit fa-fw\"></i></a> <a href=\"delete-player.php\" onclick=\"return confirm('Voulez-vous vraiment suprimer ce participant ?');\"><i class=\"fa fa-trash-o\"></i></a></td>";
    echo "</tr>";
}
?>

